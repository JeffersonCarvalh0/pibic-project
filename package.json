{
  "name": "ts-rest-boilerplate",
  "version": "1.0.0",
  "description": "This is a boilerplate for REST APIs written in TypeScript and built with Express. It comes with some example code.",
  "main": "/dist/server.js",
  "scripts": {
    "build": "tsc",
    "postinstall": "build",
    "start": "NODE_ENV=prod node dist/server.js",
    "start-dev": "NODE_ENV=dev nodemon",
    "test": "NODE_ENV=test mocha -r ts-node/register src/test/*.ts"
  },
  "author": "Jefferson Carvalho",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.1.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/config": "0.0.34",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.0.14",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.8",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.1.1",
    "mocha-typescript": "^1.1.12",
    "nodemon": "^1.17.4",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}

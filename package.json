{
  "name": "ts-rest-boilerplate",
  "version": "1.0.0",
  "description": "This is a boilerplate for REST APIs written in TypeScript and built with Express. It comes with some example code.",
  "main": "/dist/server.js",
  "scripts": {
    "build": "tsc",
    "postinstall": "yarn build",
    "start": "NODE_ENV=prod node dist/server.js",
    "start-dev": "NODE_ENV=dev nodemon",
    "test": "NODE_ENV=test mocha --exit -r ts-node/register src/test/*.ts",
    "lint": "tslint --fix --project .",
    "lint:staged": "lint-staged"
  },
  "author": "Jefferson Carvalho",
  "license": "MIT",
  "dependencies": {
    "@types/mocha": "^5.2.6",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.2",
    "chai-http": "^4.2.1",
    "express": "^4.16.3",
    "haversine": "^1.1.1",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.1.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/config": "0.0.34",
    "@types/express": "^4.11.1",
    "@types/haversine": "^1.1.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.0.14",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.0",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "chai": "^4.1.2",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "nodemon": "^1.17.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.2"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{ts,.spec.tsx}": [
      "yarn lint",
      "git add"
    ]
  }
}
